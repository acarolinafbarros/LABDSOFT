@model IEnumerable<GAM.Models.InformaticoViewModels.GestaoPerfisViewModel>

@{
    ViewData["Title"] = "Lista de perfis";
}

<h2>Lista de perfis</h2>

<p>
    <a asp-action="Create">Criar novo perfil</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                   @Html.DisplayNameFor(model => model.NomeUtilizador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfil)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeUtilizador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-NomeUtilizador="@item.NomeUtilizador"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>
                <a asp-action="Delete" asp-route-NomeUtilizador="@item.NomeUtilizador"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>

            </td>
        </tr>
}
    </tbody>
</table>
