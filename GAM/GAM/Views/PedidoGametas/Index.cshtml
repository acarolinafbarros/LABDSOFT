@model IEnumerable<GAM.Models.PMAViewModels.PedidoGametasViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Pedidos de Gâmetas</h2>

<p>
    Criar novo pedido
    <a asp-action="Create"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefExterna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrupoSanguineoHomem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrupoSanguineoMulher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoProcessoPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Centro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefExterna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrupoSanguineoHomem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrupoSanguineoMulher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoProcessoPedido)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></a>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
