@model IEnumerable<GAM.Models.DadorViewModels.Consulta>

@{
    ViewData["Title"] = "Lista de consultas";
}

<h2>Lista de consultas</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataConsulta)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Dador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dador.DadorId)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ConsultaId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></a>
                <a asp-action="Edit" asp-route-id="@item.ConsultaId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>
                <a asp-action="Delete" asp-route-id="@item.ConsultaId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>

            </td>
        </tr>
}
    </tbody>
</table>
