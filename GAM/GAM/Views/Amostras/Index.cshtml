@model IEnumerable<GAM.Models.Laboratorio.Amostra>

@{
    ViewData["Title"] = "Lista de amostras";
}

<h2>Lista de amostras</h2>

<p>
    <a asp-action="Create">Criar nova amostra</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoAmostra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoAmostra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataRecolha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Banco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Piso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cannister)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GlobetCor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GlobetNumero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PalhetaCor)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Dador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoAmostra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAmostra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRecolha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cannister)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlobetCor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlobetNumero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PalhetaCor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dador.DadorId)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AmostraId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></a>
                <a asp-action="Edit" asp-route-id="@item.AmostraId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>
                <a asp-action="Delete" asp-route-id="@item.AmostraId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>

            </td>
        </tr>
}
    </tbody>
</table>
