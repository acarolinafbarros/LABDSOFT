@model GAM.Models.DadorViewModels.Dador

@{
    ViewData["Title"] = "Details";
}
<style>
    .titleText {
        font-size: 2em;
    }

    .section {
        margin-top: 20px;
    }
    .titleButtons {
        text-align: end;
    }
</style>

@*<h2>Details</h2>*@

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8">
                <span class="titleText glyphicon glyphicon-search" aria-hidden="true"></span> &nbsp;
                @Html.Label("Title", "Dador", new { @class = "titleText" })
            </div>
            <div class="col-md-4 titleButtons">
                <a asp-action="Edit" asp-route-id="@Model.DadorId"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; Edit</button></a>
                <a asp-action="Index"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;Back to List</button></a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.IniciaisDador)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.IniciaisDador, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.Nome)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Nome, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.DocIdentificacao)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.DocIdentificacao, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.Morada)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Morada, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.DataNasc)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.DataNasc, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.LocalNasc)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.LocalNasc, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.Nacionalidade)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Nacionalidade, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <dl class="dl-horizontal section">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#">Detalhes</a></li>
            </ul>


            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Profissao)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.Profissao, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.GrauEscolaridade)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.GrauEscolaridade, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.EstadoCivil)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.EstadoCivil, new { @class = "form-control", @readonly = "readonly" })
                </div>
                
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.NumFilhos)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.NumFilhos, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Altura)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.Altura, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Peso)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.Peso, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.CorPele)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.CorPele, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.CorOlhos)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.CorOlhos, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.CorCabelo)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.CorCabelo, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.TexturaCabelo)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.TexturaCabelo, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.GrupoSanguineo)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.GrupoSanguineo, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Etnia)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(model => model.Etnia, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
        </dl>
        <dl class="dl-horizontal section">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FaseDador)</th>
                        <th>@Html.DisplayNameFor(model => model.EstadoDador)</th>
                        <th>@Html.DisplayNameFor(model => model.DadosDador)</th>
                        <th>@Html.DisplayNameFor(model => model.NumAbortos)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalGestacoes)</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Html.DisplayFor(modelItem => modelItem.FaseDador)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.EstadoDador)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.DadosDador)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.NumAbortos)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.TotalGestacoes)</td>
                    </tr>

                </tbody>
            </table>
        </dl>

    </div>
</div>
